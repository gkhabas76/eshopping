<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <h3>My Orders</h3>
        {{#each orders}}  <!--Purchased products are displayed in the user's profile page-->

        <div class="panel panel-default">
            <div class="panel-body">
                <ul class="list-group">
                    {{#each this.items}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{this.item.name}} || {{this.qty}} Quantity
                                <span class="badge badge-primary badge-pill">€{{this.price}}</span>
                            </li>
                    {{/each}}

                </ul>
            </div>
            <div class="panel-footer">Total Price: €{{this.shopping.totalPrice}}</div>
        </div>
        {{/each}}
    </div>
</div>